<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="40dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="#FFFFFF"
            android:fontFamily="@font/cabin_semibold" android:textSize="60sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textColor="#FFFFFF"
            android:fontFamily="@font/cabin_semibold" android:textSize="30sp" android:layout_marginTop="251dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>
    <TextView
            android:text="FIND A TEAM IN YOUR CITY,  AND DOMINATE THE LEAGUE"
            android:layout_width="254dp"
            android:layout_height="50dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textColor="#FFFFFF"
            android:singleLine="false" android:fontFamily="@font/cabin_semibold" android:textAlignment="center"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textSize="15sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/getStartedButton" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.133"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getStartedButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:fontFamily="@font/cabin_semibold"
            android:textSize="15sp" android:textColor="#FFFFFF" android:background="@drawable/swoosh_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>